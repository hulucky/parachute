<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#c1d8fd"
        android:gravity="center_horizontal"

        android:orientation="vertical"
        android:paddingBottom="@dimen/x5"
        android:paddingLeft="@dimen/x5"
        android:paddingRight="@dimen/x5"
        android:paddingTop="@dimen/x5">

        <LinearLayout
            android:layout_width="550dp"
            android:layout_height="match_parent"

            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical">


                <TextView
                    android:layout_width="200dp"
                    android:layout_height="30dp"

                    android:layout_marginLeft="100dp"

                    android:text="加速度传感器状态:"

                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/imgjsd"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/deng_black" />

                <TextView
                    android:id="@+id/tvjsdstate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="断开" />

                <Switch
                    android:id="@+id/switchJsd"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/x40"

                    android:layout_marginLeft="20dp"
                    android:showText="true"
                    android:text=" 方向:"
                    android:textOff="下"
                    android:textOn="上"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btnReSendJsd"
                    android:layout_width="30dp"
                    android:layout_height="30dp"

                    android:visibility="gone" />
            </LinearLayout>

            <FrameLayout
                android:id="@+id/fltgjsdcurve"
                android:layout_width="480dp"
                android:layout_height="250dp"
                android:background="@color/lightblue"></FrameLayout>

            <ProgressBar
                android:id="@+id/progressBar1"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:progressDrawable="@drawable/progress_horizontal" />

        </LinearLayout>

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="2dp"
                    android:text="   加  速  度 ：" />

                <TextView
                    android:id="@+id/edtgjsd"
                    style="@style/jsd_edit" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="m/s² " />

                <View style="@style/split_vetical" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="5dp"
                    android:text="平均加速度 ：" />

                <TextView
                    android:id="@+id/edtgpjjsd"
                    style="@style/jsd_edit" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="m/s² " />


            </TableRow>

            <TextView style="@style/splite_line" />

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="60dp"

                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:text=" 空行程时间：" />

                <TextView
                    android:id="@+id/edtgkxcsj"
                    style="@style/jsd_edit" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" s        " />

                <View style="@style/split_vetical" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="5dp"
                    android:text="空行程距离：" />

                <TextView
                    android:id="@+id/edtgkxcjl"
                    style="@style/jsd_edit" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="mm   " />
            </TableRow>

            <TextView style="@style/splite_line" />

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="60dp"

                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="5dp"
                    android:text="制动时间：" />

                <TextView
                    android:id="@+id/edtgzdjl"
                    style="@style/jsd_edit" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" s  " />

                <View style="@style/split_vetical" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp" />

                <TextView
                    style="@style/jsd_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </TableRow>
        </TableLayout>
    </LinearLayout>


</LinearLayout>
